---
import "../styles/global.css";
import SiteHeader from "../components/SiteHeader.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><slot name="title" /></title>
  </head>
  <body class="min-h-screen bg-[#0b0b0f] text-white
               [background-image:linear-gradient(rgba(255,255,255,.03)_1px,transparent_1px),
                                 linear-gradient(90deg,rgba(255,255,255,.03)_1px,transparent_1px)]
               [background-size:40px_40px]">
    <SiteHeader />
    <main class="max-w-6xl mx-auto px-4 py-10">
      <slot />
    </main>
  </body>
</html>
